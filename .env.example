# Server Configuration
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# MongoDB
MONGODB_URI=mongodb://localhost:27017/flexfi

# Authentication
JWT_SECRET=your-secure-jwt-secret
JWT_EXPIRES_IN=7d

# Encryption
ENCRYPTION_KEY=your-secure-encryption-key-32-chars

# Solana Configuration
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_NETWORK=devnet
FLEXFI_DELEGATE_PUBKEY=your-delegate-public-key
FLEXFI_DELEGATE_PRIVATE_KEY=your-delegate-private-key

# KYC Provider (Kulipa)
KULIPA_API_KEY=your-kulipa-api-key
KULIPA_API_URL=https://api.kulipa.io
KULIPA_WEBHOOK_SECRET=your-kulipa-webhook-secret

# OAuth Providers
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/api/auth/google/callback

APPLE_CLIENT_ID=your-apple-client-id
APPLE_TEAM_ID=your-apple-team-id
APPLE_KEY_ID=your-apple-key-id
APPLE_PRIVATE_KEY_LOCATION=path/to/private/key
APPLE_CALLBACK_URL=http://localhost:3000/api/auth/apple/callback

TWITTER_CONSUMER_KEY=your-twitter-consumer-key
TWITTER_CONSUMER_SECRET=your-twitter-consumer-secret
TWITTER_CALLBACK_URL=http://localhost:3000/api/auth/twitter/callback

# SMTP Configuration (for email sending)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=user@example.com
SMTP_PASS=your_password